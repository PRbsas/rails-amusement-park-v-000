<% if @message %>
  <div class="center alert">
    <p><%= @message %></p>
  </div>
<% end %>

<div class="center">
  <div class="pic">
    <!-- <img src="http://8900-presscdn-0-84.pagely.netdna-cdn.com/wp-content/themes/beautycon/assets/img/avatar-grey.png" height="250">
    -->
  </div>

  <div class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>

    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>Tickets:</strong> <%= @user.tickets %></p>
    <p><strong>Mood:</strong> <%= @user.mood %></p>
    <p><strong>Height:</strong> <%= @user.height %></p>

    <%= link_to 'Edit', edit_user_path(@user) %>
    <%= link_to 'See attractions', attractions_path %>
  </div>
</div>
